<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.littlecheesecake.glshaderfilter.gl.FilterRenderer
        android:id="@+id/cameraview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/filter_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filter 1"/>
        <Button
            android:id="@+id/filter_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filter 2"/>
        <Button
            android:id="@+id/filter_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filter 3"/>
        <Button
            android:id="@+id/filter_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filter 4"/>
    </LinearLayout>

</RelativeLayout>
